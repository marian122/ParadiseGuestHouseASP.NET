
@{
    ViewData["Title"] = "Резервация";
}

<section id="conferenceHallReserveForm">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <form>
                    <div class="form-group">
                        <i class="fa fa-user icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Имена">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-envelope icon"></i>
                        <input type="email" class="form-control" name="" value="" placeholder="E-mail">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-phone icon"></i>
                        <input type="tel" class="form-control" name="" value="" placeholder="Тел. номер">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-group icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Брой хора">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-calendar icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Дата на събитието">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-clock-o icon"></i>
                        <input type="datetime" class="form-control" name="" value="" placeholder="Начален час">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-commenting icon"></i>
                        <textarea class="form-control" name="" rows="3" placeholder="Вашето съобщение."></textarea>
                    </div>

                    <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">Резервирай</a>

                </form>
            </div>

            <div id="confHallReserveSlider" class="col-lg-7">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Images/thirdSectionHome.jpg" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/firstSectionHome.jpg" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/homePageFirstSection.jpg" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/forthSectionHome.jpg" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
