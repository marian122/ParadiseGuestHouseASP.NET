@{
    ViewData["Title"] = "RoomDetails";
}

@model ParadiseGuestHouse.Web.ViewModels.RoomViewModels.RoomDetailsViewModel

<div id="singleRoomView" class="container">
    <div class="row">
        <div id="spaImgSlider" class="col-lg-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var counter = 1;
                        foreach (var picture in Model.Pictures)
                        {
                            if (counter == 1)
                            {
                                <div class="carousel-item active">
                                    <img src=@picture />
                                </div>
                                counter++;
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img src=@picture />
                                </div>
                            }

                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-lg-5">
            @if (Model.RoomType == "SingleRoom")
            {
                <h2>Единична стая</h2>
            }
            @if (Model.RoomType == "DoubleRoom")
            {
                <h2>Двойна стая</h2>
            }
            @if (Model.RoomType == "Apartment")
            {
                <h2>Апартамент</h2>
            }
            <ul class="social-network social-circle" style="list-style: none;">
                @if (Model.RoomType == "SingleRoom" && Model.NumberOfBeds == 1)
                {
                    <li><a><i class="fa fa-bed"></i>Единично легло</a></li>
                }
                @if (Model.RoomType == "SingleRoom" && Model.NumberOfBeds == 2)
                {
                    <li><a><i class="fa fa-bed"></i>Две единични легла</a></li>
                }
                @if (Model.RoomType == "DoubleRoom" && Model.NumberOfBeds == 1)
                {
                    <li><a><i class="fa fa-bed"></i>Двойно легло</a></li>
                }
                @if (Model.RoomType == "DoubleRoom" && Model.NumberOfBeds == 2)
                {
                    <li><a><i class="fa fa-bed"></i>Две единични легла</a></li>
                }
                @if (Model.RoomType == "DoubleRoom" && Model.NumberOfBeds == 3)
                {
                    <li><a><i class="fa fa-bed"></i>Двойно легло и едно единично</a></li>
                }
                @if (Model.RoomType == "Apartment")
                {
                    <li><a><i class="fa fa-bed"></i>Двойно легло и две единични легла</a></li>
                }
                @if (Model.HasBathroom == true)
                {
                    <li><a><i class="fa fa-bathtub"></i>Баня с душ</a></li>
                }
                @if (Model.HasRoomService == true)
                {
                    <li><a><i class="fa fa-bell"></i>Руум сървиз 24/7</a></li>
                }
                @if (Model.HasSeaView == true)
                {
                    <li><a><i class="fa fa-binoculars"></i>Изглед към морето</a></li>

                }
                @if (Model.HasWifi == true)
                {
                    <li><a><i class="fa fa-wifi"></i>Безжичен интернет</a></li>

                }
                @if (Model.HasTv == true)
                {
                    <li><a><i class="fa fa-tv"></i>LCD Телевизор</a></li>

                }
                @if (Model.HasPhone == true)
                {
                    <li><a><i class="fa fa-phone"></i>Телефон</a></li>

                }
                @if (Model.HasAirConditioner == true)
                {
                    <li><a><i class="fa fa-fa fa-snowflake-o"></i>Климатик</a></li>

                }
                @if (Model.HasHeater == true)
                {
                    <li><a><i class="fa fa-thermometer-full"></i>Парно</a></li>

                }
                <li><a class="btn btn-outline-dark" asp-area="" asp-controller="Room" asp-action="Reserve" asp-route-roomId="@Model.Id">Направете своята резервация сега!</a></li>

                <li id="roomDetailsDeleteEditBtns">
                    <a class="btn btn-outline-warning" asp-area="" asp-controller="Room" asp-action="Edit" asp-route-roomId="@Model.Id">Промени</a>
                    <a class="btn btn-outline-danger" asp-area="" asp-controller="Room" asp-action="DeleteRoom" asp-route-roomId="@Model.Id">Изтрий</a>
                </li>
            </ul>

        </div>
    </div>
</div>
