@using Microsoft.AspNetCore.Identity
@using ParadiseGuestHouse.Data.Models
@{
    ViewData["Title"] = "Reserve";
}
@inject SignInManager<ApplicationUser> SignInManager
<section id="conferenceHallReserveForm">
    <div class="container">
        <div id="reserveHeader" class="d-flex justify-content-center">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Резервирай стая</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5">
                <form>
                    <div class="form-group">
                        <i class="fa fa-user icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Имена">
                    </div>
                    @if (!this.SignInManager.IsSignedIn(this.User))
                    {
                        <div class="form-group">
                            <i class="fa fa-envelope icon"></i>
                            <input type="email" class="form-control" name="" value="" placeholder="E-mail">
                        </div>
                    }
                    <div class="form-group">
                        <i class="fa fa-phone icon"></i>
                        <input type="tel" class="form-control" name="" value="" placeholder="Тел. номер">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-group icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Брой възрастни">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-group icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Брой деца">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-calendar icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Дата на настаняване" onfocus="(this.type='date')" id="date">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-calendar icon"></i>
                        <input type="text" class="form-control" name="" value="" placeholder="Дата на напускане" onfocus="(this.type='date')" id="date">
                    </div>
                    <div class="form-group">
                        <i class="fa fa-commenting icon"></i>
                        <textarea class="form-control" name="" rows="3" placeholder="Вашето съобщение."></textarea>
                    </div>

                    <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">Резервирай</a>
                </form>
            </div>

            <div id="confHallReserveSlider" class="col-lg-7">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Images/thirdSectionHome.jpg" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/firstSectionHome.jpg" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/homePageFirstSection.jpg" />
                        </div>
                        <div class="carousel-item">
                            <img src="~/Images/forthSectionHome.jpg" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>