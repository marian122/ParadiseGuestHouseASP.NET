@{
    ViewData["Title"] = "Edit";
}
@model ParadiseGuestHouse.Web.ViewModels.Room.EditRoomViewModel

<section id="conferenceHallReserveForm">
    <div class="container">
        <div id="reserveHeader" class="d-flex justify-content-center">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Редактиране на стая</h2>
                </div>
            </div>
        </div>
        <div id="createRoomHeader" class="d-flex justify-content-center">
            <div class="row">
                <div class="col-lg-12">
                    <form asp-controller="Accomodation" asp-action="CreateRoom">
                        <div class="form-check">
                            <label>Тип стая</label>
                            <select class="form-control" asp-for="RoomType">
                                <option value="1">Единична стая</option>
                                <option value="2">Двойна стая</option>
                                <option value="3">Апартамент</option>
                            </select>
                            <span asp-validation-for="RoomType" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label>Цена</label>
                            <input class="form-control" asp-for="Price">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label>Брой легла</label>
                            <input class="form-control" asp-for="NumberOfBeds">
                            <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
                        </div>
                        <div class="form-check">
                            <label>Баня</label>
                            <input type="checkbox" asp-for="HasBathroom">
                        </div>
                        <div class="form-check">
                            <label>Руум сървис</label>
                            <input type="checkbox" asp-for="HasRoomService">
                        </div>
                        <div class="form-check">
                            <label>Изглед към морето</label>
                            <input type="checkbox" asp-for="HasSeaView">
                        </div>
                        <div class="form-check">
                            <label>Изглед към планината</label>
                            <input type="checkbox" asp-for="HasMountainView">
                        </div>
                        <div class="form-check">
                            <label>Безжичен интернет</label>
                            <input type="checkbox" asp-for="HasWifi">
                        </div>
                        <div class="form-check">
                            <label>Телевизор</label>
                            <input type="checkbox" asp-for="HasTv">
                        </div>
                        <div class="form-check">
                            <label>Телефон</label>
                            <input type="checkbox" asp-for="HasPhone">
                        </div>
                        <div class="form-check">
                            <label>Климатик</label>
                            <input type="checkbox" asp-for="HasAirConditioner">
                        </div>
                        <div class="form-check">
                            <label>Парно</label>
                            <input type="checkbox" asp-for="HasHeater">
                        </div>

                        <input type="submit" value="Редактирай" class="btn btn-outline-dark" asp-area="" asp-controller="Room" asp-action="Edit">

                    </form>
                </div>
            </div>
        </div>

    </div>
</section>
