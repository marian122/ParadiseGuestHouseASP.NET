@using Microsoft.AspNetCore.Identity
@using ParadiseGuestHouse.Data.Models
@{
    ViewData["Title"] = "Accomodation";
}
@inject SignInManager<ApplicationUser> SignInManager

@if (!this.SignInManager.IsSignedIn(this.User))
{
    <div id="singleRoom" class="container">
        <div class="row">
            <div class="col-lg-6">
                <img src="~/Images/singleRoom.jpg" />
            </div>
            <div class="col-lg-6">
                <h2>Единична стая</h2>
                <h3>Цена: 75,00лв.</h3>
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Accomodation" asp-action="SingleRoom">Повече информация</a>

            </div>
        </div>
    </div>
}
else
{
    <div id="singleRoom" class="container">
        <div class="row">
            <div class="col-lg-6">
                <img src="~/Images/singleRoom.jpg" />
            </div>
            <div class="col-lg-6">
                <h2>Единична стая</h2>
                <h3>Цена: 75,00лв.</h3>
                <a class="btn btn-outline-dark" asp-area="" asp-controller="Accomodation" asp-action="SingleRoom">Повече информация</a>
                <a class="btn btn-outline-danger" asp-area="" asp-controller="Accomodation" asp-action="SingleRoom">Изтрий</a>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Accomodation" asp-action="SingleRoom">Добави стая</a>
        </div>
    </div>

}
