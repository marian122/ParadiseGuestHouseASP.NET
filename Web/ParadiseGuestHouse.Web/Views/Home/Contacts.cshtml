
@{
    ViewData["Title"] = "Contacts";
}

<div id="contacts" class="container">
    <div class="row">
        <div class="col-lg-5">
            <i class="fa fa-home"></i>
            <a>8240 Свети Влас, ул. Люлин № 4, Юрта</a>
        </div>

        <div class="col-lg-4">
            <i class="fa fa-envelope"></i>
            <a>paradiseHotel@mail.com</a>
            
        </div>

        <div class="col-lg-3">
            <i class="fa fa-phone"></i>
            <a>+359-456-789-1</a>
        </div>
    </div>
</div>

<section id="contactsForm">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" name="" value="" placeholder="Имена">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="" value="" placeholder="E-mail">
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" name="" value="" placeholder="Тел. номер">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="" rows="3" placeholder="Вашето съобщение."></textarea>
                    </div>
                    <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa fa-paper-plane-o" aria-hidden="true"></i>Изпрати
                    </a>

                </form>
            </div>

            <div class="col-md-7">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d187673.308693818!2d23.18386297025225!3d42.69534680336567!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa8682cb317bf5%3A0x400a01269bf5e60!2sSofia!5e0!3m2!1sen!2sbg!4v1580910388244!5m2!1sen!2sbg" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
        </div>
    </div>
</section>

